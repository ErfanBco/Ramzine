<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConsLevelAdaptor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLevelOpen"
        android:text=""
        android:textColor="#FFFFFF"
        android:fontFamily="@font/titr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonLevel2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLevelOpen"
        android:text=""
        android:textColor="#FFFFFF"
        android:fontFamily="@font/titr"
        app:layout_constraintLeft_toRightOf="@id/buttonLevel1"
        app:layout_constraintRight_toLeftOf="@id/buttonLevel3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLevel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLevelOpen"
        android:text=""
        android:textColor="#FFFFFF"
        android:fontFamily="@font/titr"
        app:layout_constraintLeft_toRightOf="@id/buttonLevel2"
        app:layout_constraintRight_toLeftOf="@id/buttonLevel4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLevel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLevelOpen"
        android:text=""
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:fontFamily="@font/titr"
        app:layout_constraintLeft_toRightOf="@id/buttonLevel3"
        app:layout_constraintRight_toLeftOf="@id/buttonLevel5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLevel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLevelOpen"
        android:text=""
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:fontFamily="@font/titr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>