<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. 0E4D92-->
        <item name="colorPrimary">#146FF7</item>
        <item name="colorPrimaryDark">#000080</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#146FF7</item>
        <item name="android:itemBackground">#146FF7</item>
        <item name="android:itemTextAppearance">@style/AlertDialogEntireWhiteText</item>
    </style>

    <style name="AlerDialog" parent="@android:style/Theme.Dialog">
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:bottomLeftRadius">20dp</item>
        <item name="android:bottomRightRadius">20dp</item>
        <item name="android:colorPrimary">#EF7215</item>
        <item name="colorPrimaryDark">#FC6600</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#FC6600</item>


    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/SplashScreen</item>
        <item name="colorPrimaryDark">@color/SplashScreen</item>
        <item name="colorAccent">@color/SplashScreen</item>
        <item name="android:navigationBarColor">@color/SplashScreen</item>
        <item name="android:windowBackground">@color/SplashScreen</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TitrTablayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/titr</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="PopUpMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#146FF7</item>
    </style>

    <style name="AlertDialogEntireWhiteText" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#146FF7</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:font">@font/titr</item>
        <item name="android:fontFamily">@font/titr</item>
    </style>


</resources>
